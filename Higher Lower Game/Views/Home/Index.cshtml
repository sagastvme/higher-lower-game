@{
    ViewBag.Title = "Home Page";
}
    @model List<Character>


<div class="jumbotron mt-4">
   
    <table>
        <tr>
            <th>Name</th>
            <th>Image</th>
            <th>Views</th>
        </tr>
        @foreach (var character in Model)
        {
            <tr>
                <td>@character.Name</td>
                <td><img src="~/Content/@character.Image" alt="@character.Name" width="100" height="100" /></td>
                <td>@character.Views</td>
                <td>@character.Id</td>
            </tr>
        }
    </table>
    <form method="post" action="/Home/HandleButtonClick">
        
        @foreach (var character in Model)
        {
            <button name="selectedCharacter" value="@character.Views">@character.Name</button>
        }
    </form>
</div>
